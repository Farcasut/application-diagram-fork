  <content>
{{velocity}}

{{html}}
&lt;div class="modal fade fullscreen" id="inlineDiagramEditorModal" tabindex="-1" role="dialog" aria-hidden="true"&gt;
  &lt;div class="modal-dialog modal-fullscreen" role="document"&gt;
    &lt;div class="modal-content"&gt;
      &lt;!-- Modal Header --&gt;
      &lt;div class="modal-header"&gt;
        &lt;h5 class="modal-title"&gt;Diagram Editor&lt;/h5&gt;
      &lt;/div&gt;
      &lt;div class="modal-body"&gt;
        &lt;div id="diagram-editor-container"&gt;
          #set ($docName = "Diagram.Inline.editor")
          #set ($doc = $xwiki.getDocument($docName))
          ##Parameters to get only the body content in the iframe.
          #set ($extraParams = " ")
          #set ($escapedConfigs = $escapetool.url($request.diagramConfigs))
          #set ($url = $doc.getURL('view', "diagramConfigs=$escapedConfigs&amp;inline=$request.inline&amp;id=$request.id&amp;$extraParams"))
          &lt;iframe style="width: 100%; height: 700px; border:none;" src=$url/&gt;
        &lt;/div&gt;
      &lt;/div&gt;
      &lt;div class="modal-footer"&gt;
        &lt;button id="closeDiagramModalBtn" type="button" class="btn btn-secondary"&gt;Close&lt;/button&gt;
        &lt;button id="saveDiagramBtn" type="button" class="btn btn-primary" &gt;Save Diagram&lt;/button&gt;
      &lt;/div&gt;
    &lt;/div&gt;
  &lt;/div&gt;
&lt;/div&gt;

{{/html}}
{{/velocity}}

