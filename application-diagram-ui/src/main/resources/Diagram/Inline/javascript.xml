    <property>
      <code>require(['jquery'], function($){
  $(document).on('xwiki:actions:edit xwiki:actions:view', function(){
    require(['diagram-setup', 'diagram-viewer'], function(diagramSetup, diagramViewerPromise){
      $(".diagram").viewDiagram();
    });
  });

  $(document).on('click', '.inlineDiagramEditButton', function() {
    let URL = new XWiki.Document("EditModal", "Diagram.Inline").getURL('get');
    let element = $(this);
    let identifier = element.attr('id');
    let input = $(`input.${identifier}`);
    let diagram = $(`.diagram.${identifier}`);
    let diagramConfigs = diagram.data('diagramConfig');
    let configParam = encodeURIComponent(JSON.stringify(diagramConfigs));
    let finalURL = URL + `?diagramConfigs=${configParam}&amp;inline=true&amp;id=${identifier}`;

    $.get(finalURL)
      .done(function (data) {
        $('body').append(data);
        $('#inlineDiagramEditorModal').modal('show');
    })
    .fail(function(){
      //TODO add user notification.
      console.error("Failed to retrive the editor modal.")
    })
  });

  $(document).on('hidden.bs.modal',"#inlineDiagramEditorModal", function()
  {
    let element = $('#inlineDiagramEditorModal');
    element.remove();
  });

  $(document).on('click', '#closeDiagramModalBtn', function(){
    let element = $('#inlineDiagramEditorModal');
    element.modal('hide');
  })

});</code>
